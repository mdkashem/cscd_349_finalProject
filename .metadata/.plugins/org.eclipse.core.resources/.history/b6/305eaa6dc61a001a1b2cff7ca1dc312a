import java.util.Random;

public class Room extends Dungeon{

	private int pillar;
	private int healingPotion;
	private Object pit;
	
	
	public Room() {
	}
	
	public int getHealingPotion() {
		return healingPotion;
	}

	public void setHealingPotion(int healingPotion) {
		this.healingPotion = healingPotion;
	}

	public Object getPit() {
		return pit;
	}

	public void setPit(Object pit) {
		this.pit = pit;
	}
	
	public int getPillar() {
		return pillar;
	}
	
	public void setPillar(int pillar) {
		this.pillar = pillar;
	}

	public int spawnHeal() {
		if (Math.random() <= .1) {
			return 1;
		}
		return 0;
	}
	
	public void spawnPillar(Room[][] room) {
		int row = new Random().nextInt(6);
		int col = new Random().nextInt(6);
		int count = 0;
		
		while(count != 4) {
			if(room[row][col].hasPillar() || room[row][col].hasEntrance() || room[row][col].hasExit()) {
				row = new Random().nextInt(6);
				col = new Random().nextInt(6);
			}
			room[row][col].getPillar();
			count++;
		}
		
	}
	

	public String toString() {
		char randomChar = 'x';
		String top = "*";
		String middle = "";
		String bottom = "*";
		
		
		
		
		return "* - *" + "\n" + "| " + randomChar + " |" + "\n" + "* - *";
		
	}
	
	public boolean hasPillar() {
		if(this.getPillar() == 0) {
			return true;
		}
		return false;
	}
	
	
	
	
	  public boolean hasEntrance() { 
		  if(this.getEntrance() != null) {
			  return true;
		  } 
		  return false;
	  }
	  
	  public boolean hasExit() {
		  if(this.getExit() != null) {
			  return true;
		  }
		  return false; 
	  }
	  
	  
	 
	
	
	
	
}
